
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('is_admin').val() === true || auth.token.email === 'earnsure@admin.com')",
        ".write": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('is_admin').val() === true || auth.token.email === 'earnsure@admin.com')",
        "is_admin": {
          ".validate": "newData.isBoolean() && (newData.val() === false || auth.token.email === 'earnsure@admin.com' || root.child('users').child(auth.uid).child('is_admin').val() === true)"
        }
      },
      ".read": "auth != null && (root.child('users').child(auth.uid).child('is_admin').val() === true || auth.token.email === 'earnsure@admin.com')"
    },
